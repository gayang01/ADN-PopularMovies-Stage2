<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/review_author_tv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        tools:text="Name:" />

    <TextView
        android:id="@+id/review_content_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:textSize="18sp"
        android:fontFamily="serif-monospace"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        tools:text="Content Content ContentContent Content ContentContent
        Content ContentContent Content ContentContent Content ContentContent Content ContentContent Content ContentContent Content ContentContent Content ContentContent Content ContentContent Content ContentContent Content ContentContent Content ContentContent Content ContentContent Content ContentContent Content ContentContent Content Content"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:maxLines="4"/>

</LinearLayout>